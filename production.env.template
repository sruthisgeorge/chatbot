# Production Environment Variables Template
# Copy this file and rename to .env for local development
# For Railway deployment, set these variables in the Railway dashboard

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=x-ai/grok-4-fast:free

# Database Configuration (Railway will set DATABASE_URL automatically)
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Configuration
SECRET_KEY=your-secure-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Production Configuration
ENVIRONMENT=production
DEBUG=false

# Railway Configuration (automatically set by Railway)
# PORT=8000
# HOST=0.0.0.0

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
